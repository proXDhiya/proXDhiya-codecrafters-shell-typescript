{
  "name": "@codecrafters/shell",
  "version": "0.1.0",
  "description": "Build your own Shell challenge, from CodeCrafters",
  "license": "MIT",
  "module": "app/main.ts",
  "type": "module",
  "private": true,
  "bin": {
    "shell": "./bin/shell"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "bun run app/main.ts",
    "start": "bun app/main.ts",
    "build": "bun build app/main.ts --compile --outfile bin/shell --target bun --minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:ci": "bun test --coverage",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
